
@{
    Layout = "~/Views/Shared/_ColumnOne.cshtml";


}



<style>
    .item {
        text-align: center;
        font-family: 'Adobe Arabic';
        font-size: 20px;
        border: 1px;
        margin: 10px;
        background-color: #f9d7d7;
        height: 40px;
        cursor: pointer;
    }
</style>

<script>
    $(load);

    function load() {

        $("#btnplus").click(function () { 

            $("#p1").animate({"font-size":"+=2px"});
        });

        $("#btnminus").click(function () {

            $("#p1").animate({ "font-size": "-=2px" });
        });

        $(".item").click(function () {

            $(this).animate({ "width": "10%" }, 500).css({ "background-color": "", "position": "fixed" }).delay(200).addClass("bg-success").animate({ "left": "10px", "top": "70px", "border-radius": "50%" });
        });

        $(".item").hover(function () {
            $(this).animate({ "width": "10%" });
            $(this).html("منو بخر");
        }, function () {
            $(this).animate({ "width": "100%" });
            $(this).html("چرا خب");

        });
    }

</script>
